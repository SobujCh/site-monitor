# Digital Ocean API Key
DO_API_KEY=your_digital_ocean_api_key_here

# Comma-separated list of datacenter regions (e.g., nyc1, sfo3, ams3)
# Available regions: https://docs.digitalocean.com/reference/api/api-reference/#tag/Regions
DATACENTERS=nyc1,sfo3,ams3

# SSH Key ID (optional - get from: doctl compute ssh-key list)
# If not provided, password authentication will be used
SSH_KEY_ID=

# Proxy credentials (fixed username and password)
PROXY_USERNAME=proxyuser
PROXY_PASSWORD=proxypass123

# GitHub repository to clone and run with PM2 (optional)
# Format: https://github.com/username/repo.git
GITHUB_REPO=
